extends ../base.pug

block variables
  - var template = 'collections'

block content
   section.collections
    .collections__wrapper
      .collections__titles
        each collection, index in collections
          .collections__titles__item
            span.collections__titles__item__label=`Collection ${index == 0 ? "One" : index == 1 ? "Two" : index == 2 ? "Three" : "Four"}`
            p.collections__titles__item__text=collection.data.title

      .collections__gallery  
        each collection in collections
          .collection__gallery
            each product in collection.data.products
                .collection__gallery__item    
                    a.collection__gallery__item__link(href=`/jewel/${product.product.slug}`)
                      figure.collection__gallery__item__image-wrapper
                        img.collection__gallery__item__image(src=product.product.data.product_image.url alt=product.product.data.product_image.alt)
      
      .collection__info
        each collection, index in collections
          .collection__info__item(class=`${index == 0 ? "collection__info__item--active" : ""}`)
            h2.collection__info__item__title=`${collection.data.title} Collection`
            p.collection__info__item__description=collection.data.description
        